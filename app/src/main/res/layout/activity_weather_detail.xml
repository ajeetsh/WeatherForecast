<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.WeatherDetailActivity">
    <data>
        <variable
                name="weather"
                type="com.example.weatherforecast.data.WeatherInfo"></variable>
        <variable
                name="cityObject"
                type="com.example.weatherforecast.data.City"></variable>
    </data>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_8_dp"
                android:columnCount="2">

            <TextView
                    android:id="@+id/country"
                    style="@style/WeatherMainRowLable"
                    android:textStyle="bold"
                    android:text='@string/country'
            />
            <TextView
                    android:id="@+id/city"
                    style="@style/WeatherMainRowLable"
                    android:text='@string/city'
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/padding_8_dp"
            />
            <TextView
                    android:id="@+id/country_tv"
                    style="@style/WeatherMainRowValue"
                    android:textStyle="bold"
                    android:text="@{cityObject.country}"
            />
            <TextView
                    android:id="@+id/city_tv"
                    style="@style/WeatherMainRowValue"
                    android:textStyle="bold"
                    android:text='@{cityObject.name}'
                    android:layout_marginBottom="@dimen/padding_8_dp"
            />
            <TextView
                    android:id="@+id/date_time"
                    style="@style/WeatherMainRowLable"
                    android:text='@string/date_time'
            />
            <TextView
                    android:id="@+id/humidity"
                    style="@style/WeatherMainRowLable"
                    android:text='@string/humidity'
                    android:layout_marginBottom="@dimen/padding_8_dp"
            />
            <TextView
                    android:id="@+id/date_time_tv"
                    style="@style/WeatherMainRowValue"
                    android:text="@{weather.dt_txt}"
            />
            <TextView
                    android:id="@+id/humidity_tv"
                    style="@style/WeatherMainRowValue"
                    android:text='@{String.valueOf(weather.main.humidity)}'
                    android:layout_marginBottom="@dimen/padding_8_dp"
            />

            <TextView
                    android:id="@+id/temp"
                    style="@style/WeatherMainRowLable"
                    android:text='@string/temp'
            />
            <TextView
                    android:id="@+id/wind"
                    style="@style/WeatherMainRowLable"
                    android:text='@string/wind_speed'
                    android:layout_marginBottom="@dimen/padding_8_dp"
            />
            <TextView
                    android:id="@+id/temp_tv"
                    style="@style/WeatherMainRowValue"
                    android:text='@{String.valueOf(weather.main.temp)}'
            />
            <TextView
                    android:id="@+id/wind_speed_tv"
                    style="@style/WeatherMainRowValue"
                    android:text='@{String.valueOf(weather.wind.speed)}'
                    android:layout_marginBottom="@dimen/padding_8_dp"
            />
            <TextView
                    android:id="@+id/temp_min"
                    style="@style/WeatherMainRowLable"
                    android:text='@string/temp_min'
            />
            <TextView
                    android:id="@+id/temp_max"
                    style="@style/WeatherMainRowLable"
                    android:text='@string/temp_max'
                    android:layout_marginBottom="@dimen/padding_8_dp"
            />
            <TextView
                    android:id="@+id/temp_min_tv"
                    style="@style/WeatherMainRowValue"
                    android:text='@{String.valueOf(weather.main.temp_min)}'
            />
            <TextView
                    android:id="@+id/temp_max_tv"
                    style="@style/WeatherMainRowValue"
                    android:text='@{String.valueOf(weather.main.temp_max)}'
                    android:layout_marginBottom="@dimen/padding_8_dp"
            />
            <TextView
                    android:id="@+id/rain"
                    style="@style/WeatherMainRowLable"
                    android:layout_columnSpan="2"
                    android:text='@string/weather'
            />
            <TextView
                    android:id="@+id/rain_tv"
                    android:layout_columnSpan="2"
                    style="@style/WeatherMainRowValue"
                    android:text='@{String.valueOf(weather.weather.get(0).description)}'
            />
        </GridLayout>
    </ScrollView>
</layout>