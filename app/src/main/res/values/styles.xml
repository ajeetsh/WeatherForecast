<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="WeatherMainRowParent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="WeatherMainRowLable" parent="WeatherMainRowParent">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="WeatherMainRowValue" parent="WeatherMainRowParent">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>

</resources>
